<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_above="@+id/ingredients_list_ii"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#0288D1" />

    <ImageView
        android:id="@+id/imageViewDishFragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/fon" />

    <TextView
        android:id="@+id/dishNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewDishFragment"
        android:text="Название блюда"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textIsSelectable="false"
        android:paddingTop="0dp"
        android:paddingLeft="70dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredients_list_ii"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageViewDishFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>