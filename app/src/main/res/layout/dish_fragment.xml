<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/dish_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:id="@+id/imageViewDishFragment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/fon" />

        <TextView
            android:id="@+id/dishNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="70dp"
            android:paddingTop="0dp"
            android:text="Название блюда"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#212121"
            android:textIsSelectable="false"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/effect1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dishNameTextView"
            android:layout_toEndOf="@+id/imageViewDishFragment"
            android:layout_toRightOf="@+id/imageViewDishFragment"
            android:text="Эффект1"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/effect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/effect1"
            android:layout_alignStart="@+id/effect1"
            android:layout_below="@+id/effect1"
            android:text="Эффект2"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/effect3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/effect2"
            android:layout_toEndOf="@+id/imageViewDishFragment"
            android:layout_toRightOf="@+id/imageViewDishFragment"
            android:text="Эффект3"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90 мин"
            android:textColor="#212121"
            android:layout_below="@+id/imageViewDishFragment"
            android:layout_alignLeft="@+id/effect3"
            android:layout_alignStart="@+id/effect3" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredients_list_ii"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dish_head"
        android:paddingTop="5dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>